<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png', class: 'img-fluid' %>
    </div>

    <div class="col-8">
    <div class="text-center">
    
      <h2 class="profile profile_email"><%= @user.email %></h2>
      <br />
      <h3 class="profile">Member Since: <%= @user.created_at.strftime("%B %d, %Y") %> </h3>
      <br />
      <h4 class="profile"><%= @user.comments.count %> total comments</h4>
      <br />
      <h4 class="profile"><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
    </div>
  </div>
    </div>
  <div class="clear"></div>

<br /><br />

<h1 class="text-center">My Comments</h1>
<br /><br />
<div class="row">
  <% @user.comments.each do |comment| %>
     <div class="col-12 col-sm-6">
      <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
     <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
    </blockquote>
  </div>
  <% end %>
</div>

<div class="clear"></div>

<br /><br />

<h1 class="text-center">My Places</h1>

<br /><br />

<% @user.places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />
  </div>
<% end %>
</div>